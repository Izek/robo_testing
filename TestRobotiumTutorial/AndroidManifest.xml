<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.touchlab.robotiumtutorial.test" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- Here we declare the package of the Application Under Test and the Test Runner -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="co.touchlab.robotiumtutorial" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <!-- We also need to make sure we're using the android.test.runner libarary -->
        <uses-library android:name="android.test.runner" />
    </application>

</manifest>